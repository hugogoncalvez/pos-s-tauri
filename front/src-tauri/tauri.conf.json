{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "POS System",
  "version": "0.1.0",
  "identifier": "com.hugogoncalvez.possystem",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "POS-S",
        "width": 1366,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "http": {
      "scope": [
        "http://localhost:8000/api/*",
        "http://192.168.*.*:8000/api/*"
      ]
    }
  }
}